#!@SH@
# $NetBSD: build-client-start,v 1.3 2015/06/07 22:49:04 joerg Exp $

. @PBULK_CONFIG@

set -e

if [ "${config_version}" != "@PBULK_CONFIG_VERSION@" ]; then
	echo "Your configuration has version ${config_version}."
	echo "This version of pbulk expects version @PBULK_CONFIG_VERSION@."
	exit 1
fi

# Start build processes inside chroots.  We assume that the chroots were
# created successfully.
if [ -n "${chroot_create}" -a "${chroot_dir}" ]; then
	if [ -n "${build_clients}" ]; then
		for client in ${build_clients}; do
			case ${client} in
			*:*)
				port="-p ${client##*:}"
				client=${client%%:*}
				;;
			*)
				;;
			esac
			ssh $port $client "for dir in ${chroot_dir}-build*; do
				PBULK_CONF=${PBULK_CONF} /usr/sbin/chroot \${dir} @SH@ -c \"${pbuild} -c ${master_port_build} -b ${pbuild_script}\" &
			done" &
		done
	else
		for dir in ${chroot_dir}-build*; do
			PBULK_CONF=${PBULK_CONF} /usr/sbin/chroot ${dir} @SH@ -c "${pbuild} -c ${master_port_build} -b ${pbuild_script}" &
		done
	fi
else
	if [ -n "${build_clients}" ]; then
		for client in ${build_clients}; do
			case ${client} in
			*:*)
				port="-p ${client##*:}"
				client=${client%%:*}
				;;
			*)
				;;
			esac
			ssh $port $client "PBULK_CONF=${PBULK_CONF} ${pbuild} -c ${master_port_build} -b ${pbuild_script}" &
		done
	else
		PBULK_CONF=${PBULK_CONF} ${pbuild} -c ${master_port_build} -b ${pbuild_script} &
	fi
fi
